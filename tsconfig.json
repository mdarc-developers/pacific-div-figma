{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ], // Maps @/ to the baseUrl directory (src)
    },
    // Ensure moduleResolution is set appropriately (e.g., "node", "Bundler", etc.)
    "moduleResolution": "bundler", // using modern bundler
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
  }
}